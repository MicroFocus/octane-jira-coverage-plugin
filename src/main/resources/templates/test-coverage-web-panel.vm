<div id="coverage-panel">
    #if($status=="hasData")
        <ul class="item-details">
            <!-- octane  entity-->
            <div id="octane-entity">
                <span class="octane-entity-icon" style="background-color: $octaneEntity.get("typeColor");">
                    <span class="octane-entity-icon-text">$octaneEntity.get("typeKey")</span>
                </span>
                <span class="octane-entity-url">
                    <a target="_blank" href="$octaneEntity.get("url")">$octaneEntity.getId()</a>
                </span>
                <span class="octane-entity-url2name-splitter">|</span>
                <span >$octaneEntity.getName()</span>
            </div>

            <!-- test status-->
            <li>
                #foreach( $group in $groups )
                    <dl>
                        <dt>
                            <div>
                                <div class="octane-test-status-icon" style="background:$group.get("color")"/>
                                <div class="octane-test-status-name" >$group.get("name"):</div>
                            </div>
                        </dt>
                        <dd>
                            <span class="octane-test-status-count">$group.get("count")</span>
                            <span class="octane-test-status-percentage">($group.get("percentage"))</span>
                        </dd>

                    </dl>

                #end
                <dl>
                    <dt><b>Total tests:</b></dt>
                    <dd><span class="octane-test-status-total-count"><b>$total</b></span>
                    </dd>
                </dl>
            </li>
            <div class="view-in-octane-text"><a target="_blank" href="$octaneEntity.get("testTabUrl")">View in Alm
                Octane</a></div>
        </ul>

    #elseif($status=="noData")
        <div>No available data</div>

    #elseif($status=="noValidConfiguration")
        <div>No valid <a href="$configUrl" target="_blank">ALM Octane configuration</a>.</div>
    #end
</div>


