#if($hasData==true)
<ul class="item-details">
    <li>
        #foreach( $group in $groups )
            <dl>
                <dt>
                    <div>
                        <div style="float: left; margin-left: -3px; width: 5px; height: 20px; background:$group.get(
                            "color")"></div>
                        <div style="margin-left: 6px;">$group.get("name"):</div>
                    </div>
                </dt>
                <dd>$group.get("count")</dd>
            </dl>

        #end
    </li>
</ul>
#{else}
<div>No available data</div>
#end


