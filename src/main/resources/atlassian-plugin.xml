<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="jira-octane-plugin"/>



  <!-- add our web resources -->
  <web-resource key="jira-octane-plugin-resources" name="jira-octane-plugin Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="jira-octane-plugin.css" location="/css/jira-octane-plugin.css"/>
    <resource type="download" name="jira-octane-plugin.js" location="/js/jira-octane-plugin.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>jira-octane-plugin</context>
  </web-resource>
  <web-panel name="TestCoverageWebPanel" i18n-name-key="test-coverage-web-panel.name" key="test-coverage-web-panel" location="atl.jira.view.issue.right.context" weight="1">
    <description key="test-coverage-web-panel.description">The panel shows test coverage information in ALM Octane for current item</description>
    <context-provider class="com.microfocus.octane.plugins.views.TestCoverageWebPanel"/>
    <resource name="view" type="velocity" location="templates/test-coverage-web-panel.vm"/>
    <label key="test-coverage-web-panel.title"/>
  </web-panel>

  <servlet key="admin-servlet" class="com.microfocus.octane.plugins.admin.AdminServlet">
    <url-pattern>/admin/octane</url-pattern>
  </servlet>
  <web-item key="jira-menu-item" name="ALM Octane Configuration0" section="system.admin/globalsettings" weight="10" application="jira">
    <description>Link to xproduct-admin page.</description>
    <label key="ALM Octane Configuration" />
    <link linkId="alm-octane-config-link">/plugins/servlet/admin/octane</link>
  </web-item>

  <rest key="octane-admin-rest" path="/octane-admin" version="1.0">
    <!--http://localhost:2990/jira/rest/octane-admin/1.0/-->
    <description>Provides REST resources for the admin UI.</description>
  </rest>
</atlassian-plugin>
